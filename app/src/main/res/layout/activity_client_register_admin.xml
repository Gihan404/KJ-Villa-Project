<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientRegisterActivity">

    <!-- Header section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a new account!"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Registration Form inside ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/profile_background">

            <!-- First Name -->
            <EditText
                android:id="@+id/fNameRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Last Name -->
            <EditText
                android:id="@+id/lNameRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- NIC Number -->
            <EditText
                android:id="@+id/nicNoRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIC Number"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Email Address -->
            <EditText
                android:id="@+id/emailRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail Address"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Contact Number -->
            <EditText
                android:id="@+id/contactNoRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Street No -->
            <EditText
                android:id="@+id/streetNoRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Street No"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Street Name -->
            <EditText
                android:id="@+id/streetNameRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Street Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: City -->
            <EditText
                android:id="@+id/cityRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: City"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Postal Code -->
            <EditText
                android:id="@+id/postalCodeRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Postal Code"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Country -->
            <EditText
                android:id="@+id/countryRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Country"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Username -->
            <EditText
                android:id="@+id/usernameRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Password -->
            <EditText
                android:id="@+id/passwordRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/edit_text_rounded_fields"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/conPasswordRegisterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/edit_text_rounded_fields"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Register Button -->
            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:onClick="onClickRegisterNewClient"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
