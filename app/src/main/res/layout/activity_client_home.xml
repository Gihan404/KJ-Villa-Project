<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context=".ClientHomeActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/client_home_back_drop" />
    <!-- Rounded Background for Login Form -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:background="@drawable/card_background"
        android:padding="5dp">
        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Welcome to your next Adventure!"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <!-- Subtext -->
        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Discover the Perfect Stay with us"
            android:textColor="@color/colorTextBlueLight"
            android:textSize="18sp" />

        <!-- Rounded Background for Search Form -->
        <RelativeLayout
            android:id="@+id/searchForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subText"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background_white"
            android:padding="16dp">

            <!-- Where Label -->
            <TextView
                android:id="@+id/whereLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Where?"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

            <!-- Where Input -->
            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whereLabel"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_location"
                android:fontFamily="@font/roboto_regular"
                android:hint="Ex: New York"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:textColorHint="@color/colorEditTextHint"
                android:textSize="16sp" />

            <!-- Check-in and Check-out Date Pickers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationEditText"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Check-in Label -->
                    <TextView
                        android:id="@+id/checkInLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Check-in"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/checkInEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="DD/MM/YY"
                        android:inputType="date"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp"
                        android:textColorHint="@color/colorEditTextHint"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Check-out Label -->
                    <TextView
                        android:id="@+id/checkOutLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Check-out"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/checkOutEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="DD/MM/YY"
                        android:inputType="date"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="12dp"
                        android:textColorHint="@color/colorEditTextHint"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/counterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchForm"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Adults Counter -->
            <LinearLayout
                android:id="@+id/adultsCounterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/adultsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Adults"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decrementAdults"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/adultsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="14dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/incrementAdults"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Children Counter -->
            <LinearLayout
                android:id="@+id/childrenCounterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/childrenLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Children"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decrementChildren"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/childrenCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/incrementChildren"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus" />

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Room Counter -->
            <LinearLayout
                android:id="@+id/roomCounterLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/roomLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Room"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/decrementRooms"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/roomCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/incrementRoom"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Find Button -->
        <Button
            android:id="@+id/findButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/counterLayout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_background_blue"
            android:fontFamily="@font/roboto_black"
            android:text="FIND"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp" />
    </RelativeLayout>
    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        app:menu="@drawable/bottom_nav_menu" />
</RelativeLayout>