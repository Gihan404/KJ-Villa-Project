<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteEmployeeActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_round_arrow_back_ios_24"
                android:contentDescription="Back"
                android:onClick="onClickBackToAdminHome"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE EMPLOYEE"
                android:textSize="24sp"
                android:textColor="@color/colorTextWhite"
                android:fontFamily="@font/roboto_black" />
        </LinearLayout>

        <!-- Sub-header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please search for the employee you want to delete."
            android:textSize="14sp"
            android:textColor="@color/colorTextWhite"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="8dp" />

        <!-- Main Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="412dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/card_background_rounded"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Search Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/staffIdDeleteEmp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_rounded_fields"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Staff ID"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/searchDeleteEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:onClick="onClickSearchDeleteEmp"
                    android:padding="16dp"
                    android:text="Search"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextWhite" />
            </LinearLayout>

            <!-- Employee Details -->
            <EditText
                android:id="@+id/firstNameDeleteEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_rounded_fields"
                android:enabled="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="First Name"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/lastNameDeleteEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edit_text_rounded_fields"
                android:enabled="false"
                android:fontFamily="@font/roboto_regular"
                android:hint="Last Name"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/btnDeleteEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_blue"
                android:fontFamily="@font/roboto_bold"
                android:onClick="onClickDeleteEmployee"
                android:padding="16dp"
                android:text="DELETE"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
