<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- Top Section with Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:onClick="onClickBackToStart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back"
        android:src="@drawable/arrow_back_ios" />

    <!-- Top Section with Join Us Now Text -->
    <TextView
        android:id="@+id/joinUsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="Join Us"
        android:textColor="@color/colorTextWhite"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold" />


    <!-- Rounded Background for Register Form -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <!-- Register Header -->
        <TextView
            android:id="@+id/registerHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_black"
            android:text="Register"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/nameClientReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerHeaderText"
            android:layout_marginTop="40dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="Name"
            android:padding="20dp"
            android:textColorHint="@color/colorEditTextHint"
            android:textSize="16sp" />

        <!-- Contact Number Input -->
        <EditText
            android:id="@+id/contactNoClientReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameClientReg"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="Contact Number"
            android:inputType="phone"
            android:padding="20dp"
            android:textColorHint="@color/colorEditTextHint"
            android:textSize="16sp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailClientReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactNoClientReg"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="Email"
            android:padding="20dp"
            android:textColorHint="@color/colorEditTextHint"
            android:textSize="16sp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordClientReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailClientReg"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="@color/colorEditTextHint"
            android:textSize="16sp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signupButton"
            android:onClick="onClickClientRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/passwordClientReg"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_black"
            android:text="Sign Up"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp" />

        <!-- Separator with "Or" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupButton"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Or"
                android:textColor="@color/colorLine"
                android:textSize="16sp" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:onClick="onClickBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/signupButton"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/ColorButtonLight"
            android:fontFamily="@font/roboto_black"
            android:text="Login"
            android:textColor="@color/colorTextBlueLight"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
