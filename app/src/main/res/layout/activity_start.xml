<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- Top Section with Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow_back_ios"
        android:contentDescription="Back" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:text="Welcome"
        android:textColor="@color/colorTextWhite"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_below="@id/welcomeText"
        android:text="Book your best stay with us"
        android:textColor="@color/colorTextWhite"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular" />

    <!-- Rounded Background for Login and Signup -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/kj_villa_black" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoImage"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background_blue"
            android:text="Login"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_black" />

        <!-- Separator with "Or" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/loginButton"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <View
                android:layout_width="150dp"
                android:layout_height="1.2dp"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Or"
                android:textColor="@color/colorLine"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium" />

            <View
                android:layout_width="150dp"
                android:layout_height="1.2dp"
                android:background="#939393" />
        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_background_light"
            android:text="Sign Up"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_black" />
    </RelativeLayout>

    <!-- More Information Text -->
    <TextView
        android:id="@+id/moreInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:text="More information"
        android:textColor="#939393"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium" />

    <!-- Social Media Icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="660dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_facebook"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_whatsapp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_instagram" />
    </LinearLayout>

</RelativeLayout>
