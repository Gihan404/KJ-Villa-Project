<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".EmployeeRegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_round_arrow_back_ios_24"
                android:contentDescription="Back"
                android:layout_marginEnd="8dp"
                android:onClick="onClickBack"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER EMPLOYEE"
                    android:textSize="24sp"
                    android:textColor="@color/colorTextWhite"
                    android:fontFamily="@font/roboto_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey, just register your employee!"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextWhite"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Hotel Staff Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Staff"
                android:textSize="18sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="16dp"/>

            <!-- Staff ID -->
            <EditText
                android:id="@+id/staffIdEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Staff ID"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="text"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- First Name -->
            <EditText
                android:id="@+id/firstNameEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="text"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Last Name -->
            <EditText
                android:id="@+id/lastNameEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="text"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Designation -->
            <Spinner
                android:id="@+id/designationEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/emailEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail Address"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Contact Number -->
            <EditText
                android:id="@+id/contactNoEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="phone"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Username -->
            <EditText
                android:id="@+id/usernameEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="text"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- User Role -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Role"
                android:textSize="16sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/groupUserRoleEmpReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/radioAdminEmpReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrator"
                    android:checked="true"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp"/>

                <RadioButton
                    android:id="@+id/radioReceptionistEmpReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receptionist"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp"
                    android:layout_marginStart="32dp"/>
            </RadioGroup>

            <!-- Password -->
            <EditText
                android:id="@+id/passwordEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="textPassword"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/conPasswordEmpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="textPassword"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="24dp"/>

            <!-- Register Button -->
            <Button
                android:id="@+id/registerEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_blue"
                android:text="Register"
                android:textColor="@color/colorTextWhite"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:onClick="onClickRegisterEmployee" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
