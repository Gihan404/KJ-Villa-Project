<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_round_arrow_back_ios_24"
                android:contentDescription="Back"
                android:onClick="onClickBack"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE NEW ROOM"
                android:textSize="24sp"
                android:textColor="@color/colorTextWhite"
                android:fontFamily="@font/roboto_black" />
        </LinearLayout>

        <!-- Room Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_rounded"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_marginTop="24dp">

            <!-- Room Number -->
            <EditText
                android:id="@+id/roomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room Number"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="text"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Room Type Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type"
                android:textSize="16sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerRoomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Room Status Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Status"
                android:textSize="16sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerRoomStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Room Description -->
            <EditText
                android:id="@+id/roomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room Description"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:lines="3"
                android:gravity="top|start"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Room Price -->
            <EditText
                android:id="@+id/roomPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room Price"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="numberDecimal"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Capacity -->
            <EditText
                android:id="@+id/numAdults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Adults"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="number"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/numChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Children"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="16dp"
                android:inputType="number"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="16dp" />

            <!-- Additional Features -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Features"
                android:textSize="16sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/featureBalcony"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balcony"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular" />

                <CheckBox
                    android:id="@+id/featureSeaView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sea View"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular" />

                <!-- Additional features can be added here -->
            </LinearLayout>

            <!-- Room Images -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Images"
                android:textSize="16sp"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Images"
                android:textColor="@color/colorTextWhite"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"
                android:onClick="onClickUploadImage"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Save Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnSaveRoom"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ColorButtonLight"
                android:text="Save"
                android:textColor="@color/colorTextBlueLight"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"
                android:padding="16dp"
                android:onClick="onClickSaveRoom"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
