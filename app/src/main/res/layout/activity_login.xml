<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <!-- Top Section with Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:onClick="onClickBackToStart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow_back_ios"
        android:contentDescription="Back" />

    <!-- Top Section with Welcome Back Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:text="Welcome"
        android:textColor="@color/colorTextWhite"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold" />

    <TextView
        android:id="@+id/backText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_below="@id/welcomeText"
        android:text="Back"
        android:textColor="@color/colorTextWhite"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold" />

    <!-- Rounded Background for Login Form -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <!-- Login Header -->
        <TextView
            android:id="@+id/loginHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_black" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginHeaderText"
            android:layout_marginTop="40dp"
            android:hint="Username"
            android:background="@drawable/edittext_background"
            android:padding="20dp"
            android:textColorHint="@color/colorEditTextHint"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameEditText"
            android:layout_marginTop="30dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="20dp"
            android:textColorHint="@color/colorEditTextHint"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular" />

        <!-- Forget Password Link -->
        <TextView
            android:id="@+id/forgetPasswordText"
            android:onClick="onClickForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/passwordEditText"
            android:layout_marginTop="20dp"
            android:text="Forget Password?"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:onClick="onClickSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgetPasswordText"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_blue"
            android:text="Login"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_black" />

        <!-- Separator with "Or" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/loginButton"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <TextView
                android:id="@+id/orText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Or"
                android:textColor="@color/colorLine"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium" />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="#939393" />
        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signupButton"
            android:onClick="onClickSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_background_light"
            android:text="Sign Up"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_black" />
    </RelativeLayout>

</RelativeLayout>
