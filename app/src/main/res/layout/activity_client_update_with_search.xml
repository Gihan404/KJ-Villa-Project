<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientUpdateActivity">

    <!-- Header section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_round_arrow_back_ios_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE PROFILE"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change your user information!"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Search Section -->
    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_below="@id/header"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/search_nic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search by NIC"
            android:background="@drawable/edit_text_rounded_fields"
            android:padding="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Profile Form inside ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_section"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/profile_background">

            <!-- First Name -->
            <EditText
                android:id="@+id/fNameUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Last Name -->
            <EditText
                android:id="@+id/lNameUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- NIC Number -->
            <EditText
                android:id="@+id/nicNoUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIC Number"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:enabled="false"/>

            <!-- Email Address -->
            <EditText
                android:id="@+id/emailUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail Address"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Contact Number -->
            <EditText
                android:id="@+id/contactNoUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Street No -->
            <EditText
                android:id="@+id/streetNoUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Street No"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Street Name -->
            <EditText
                android:id="@+id/streetNameUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Street Name"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: City -->
            <EditText
                android:id="@+id/cityUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: City"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Postal Code -->
            <EditText
                android:id="@+id/postalCodeUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Postal Code"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Address: Country -->
            <EditText
                android:id="@+id/countryUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address: Country"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- UserName -->
            <EditText
                android:id="@+id/usernameUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:background="@drawable/edit_text_rounded_fields"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Password -->
            <EditText
                android:id="@+id/passwordUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/edit_text_rounded_fields"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/conPasswordUpdateClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/edit_text_rounded_fields"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Update Button -->
            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
